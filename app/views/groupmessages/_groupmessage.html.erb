<!--group message -->
<li class="<%=  gself_or_other(groupmessage) %>">
  <div class="avatar">
    <img src="http://placehold.it/50x50" />
  </div>
  <div class="chatboxmessagecontent">
    <% if gisitLink?(groupmessage.body) %>
      <p><a href="<%= groupmessage.body %>"><u><%= groupmessage.body %></u></a></p>
    <% else %>
      <p><%= groupmessage.body %></p>
    <% end %>
    <time datetime="<%= groupmessage.created_at %>" title="<%= groupmessage.created_at.strftime("%d %b  %Y at %I:%M%p") %>">
      <%= gmessage_interlocutor(groupmessage).name %> â€¢ <%= groupmessage.created_at.strftime("%H:%M %p") %>
    </time>
  </div>
</li>