<!-- the receiver id line -->
<% publish_to @gpath do %>
    var id = "<%= @groupconversation.id %>";
    var gchatbox = $("#gchatbox_" + id + " .chatboxcontent");
    var sender_id = "<%= @groupmessage.user.id %>";
    var reciever_id = $('meta[name=user-id]').attr("content");
    console.log("hello groupfrom js");
    console.log(sender_id);
    console.log(reciever_id);
    gchatbox.append("<%= j render( partial: @groupmessage ) %>");
    gchatbox.scrollTop(gchatbox[0].scrollHeight);

    if (sender_id != reciever_id) {
        gchatBox.chatWith(id);
        gchatbox.children().last().removeClass("self").addClass("other");
        gchatbox.scrollTop(gchatbox[0].scrollHeight);
        gchatBox.notify();
    }
<% end %>